    {
      "parameters": {
        "jsCode": "// Extract product description and create 360째 video prompt\nconst description = $json.choices[0].message.content;\nconst productName = $('Webhook - Upload Image').item.json.body.product_name || 'product';\nconst imageBase64 = $('Webhook - Upload Image').item.json.body.image_base64;\n\n// Create optimized 360째 rotation prompt for Pika Labs\nconst videoPrompt = `Create a smooth 360-degree rotation video of this ${productName}. ${description}. Style: Professional product showcase, clean white background, smooth rotation, studio lighting, high-quality commercial video`;\n\n// Convert base64 to proper format\nconst cleanBase64 = imageBase64.includes(',') ? imageBase64.split(',')[1] : imageBase64;\n\nreturn {\n  video_prompt: videoPrompt,\n  image_base64: cleanBase64,\n  product_name: productName,\n  session_id: $('Webhook - Upload Image').item.json.body.session_id || 'session_' + Date.now()\n};"
      },
