      "parameters": {
        "jsCode": "// Process Pika Labs response\nconst response = $json;\n\n// If video URL is ready, return it\nif (response.video_url) {\n  return {\n    success: true,\n    video_url: response.video_url,\n    filename: `360_video_${$('Webhook - Upload Image').item.json.body.session_id || Date.now()}.mp4`,\n    message: '360째 video generated successfully!',\n    timestamp: new Date().toISOString()\n  };\n}\n\n// If we have a job ID, return processing status\nif (response.id || response.job_id) {\n  return {\n    success: false,\n    processing: true,\n    job_id: response.id || response.job_id,\n    message: 'Video is being processed. Please wait...',\n    timestamp: new Date().toISOString()\n  };\n}\n\n// If no usable response\nreturn {\n  success: false,\n  error: 'Invalid response from video service',\n  details: response,\n  timestamp: new Date().toISOString()\n};"
